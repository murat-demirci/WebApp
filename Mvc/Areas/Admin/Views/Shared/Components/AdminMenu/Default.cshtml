@model Mvc.Areas.Admin.Models.UserWithRoleViewModel
<div id="layoutSidenav_nav">
    <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
        <div class="sb-sidenav-menu">
            <div class="nav">
                <div class="sb-sidenav-menu-heading">MENÜ</div>
                <a class="nav-link" asp-area="Admin" asp-controller="Home" asp-action="Index">
                    <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                    Yonetim Paneli
                </a>
                <a class="nav-link" asp-area="null" asp-controller="Home" asp-action="Index">
                    <div class="sb-nav-link-icon"><i class="fas fa-blog"></i></div>
                    Blog Modülü
                </a>
                <div class="sb-sidenav-menu-heading">İçerikler</div>
                <a class="nav-link" asp-area="Admin" asp-controller="Category" asp-action="Index">
                    <div class="sb-nav-link-icon"><i class="fas fa-th-list"></i></div>
                    Kategoriler
                </a>
                <a class="nav-link" asp-area="Admin" asp-controller="Article" asp-action="Index">
                    <div class="sb-nav-link-icon"><i class="fas fa-file-alt"></i></div>
                    Makaleler
                </a>
                <a class="nav-link" asp-area="Admin" asp-controller="Comment" asp-action="Index">
                    <div class="sb-nav-link-icon"><i class="fas fa-comments"></i></div>
                    Yorumlar
                </a>
                <div class="sb-sidenav-menu-heading">Kullanıcılar</div>
                @if (Model.Roles.Any(r => r.Equals("SuperAdmin") || r.Equals("Role.Read")))
                {
                    <a class="nav-link" asp-area="Admin" asp-controller="Role" asp-action="Index">
                        <div class="sb-nav-link-icon"><i class="fas fa-user-shield"></i></div>
                        Roller
                    </a>
                }
                @if (Model.Roles.Any(r => r.Equals("SuperAdmin") || r.Equals("User.Read")))
                {
                    <a class="nav-link" asp-area="Admin" asp-controller="User" asp-action="Index">
                        <div class="sb-nav-link-icon"><i class="fas fa-users"></i></div>
                        Kullanıcılar
                    </a>
                }
                <div class="sb-sidenav-menu-heading">Diğer</div>
                <div class="dropdown">
                    <a type="button" id="dropdownMenuButton1" class="nav-link collapsed" data-bs-toggle="dropdown" aria-expanded="false">
                        <div class="sb-nav-link-icon"><i class="fas fa-trash-alt"></i></div>
                        Çöp Kutusu
                        <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                        <li>
                            <a class="dropdown-item" asp-area="Admin" asp-controller="Category" asp-action="DeletedCategories">Kategoriler</a>
                        </li>
                        <li>                        
                            <a class="dropdown-item" asp-area="Admin" asp-controller="Article" asp-action="DeletedArticles">Makaleler</a>
                        </li>
                        <li>
                            <a class="dropdown-item" asp-area="Admin" asp-controller="Comment" asp-action="DeletedComments">Yorumlar</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="sb-sidenav-footer">
            <div class="small">Giriş Yapan Kullanıcı:</div>
            @Model.User.UserName
        </div>
    </nav>
</div>