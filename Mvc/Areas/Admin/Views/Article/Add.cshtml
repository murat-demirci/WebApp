@model Mvc.Areas.Admin.Models.ArticleAddViewModel
@{
    Layout = "_Layout";
    ViewBag.Title = "Makale Ekle";
}
<ol class="breadcrumb mb-3 mt-2">
    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Admin</a></li>
    <li class="breadcrumb-item active"><a asp-area="Admin" asp-controller="Article" asp-action="Index">Makaleler</a></li>
    <li class="breadcrumb-item active"><a asp-area="Admin" asp-controller="Article" asp-action="Add">Ekle</a></li>
</ol>
<form asp-controller="Article" asp-action="Add" method="post" enctype="multipart/form-data">
    <div class="row mt-2">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <input class="form-control" placeholder="Makale Başlığı" type="text" id="articleTitle" asp-for="Title"/>  
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <textarea id="text-editor" asp-for="Content"></textarea>
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    Temel Konfigürasyonlar
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label for="categoryList" asp-for="CategoryId"></label>
                        @*Select içerisine tanımlanan SelectList sayesinde Id'ler ile isimler arasındaki ilişki kurulur*@
                        <select id="categoryList" class="form-control" asp-for="CategoryId" asp-items="@(new SelectList(Model.Categories,"ID","Name"))">
                            <option></option>
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                    @*//datepicker ekle*@
                    <div class="form-group">
                        <label for="datepicker" asp-for="Date"></label>
                        <input asp-for="Date" type="text" id="datepicker" class="form-control" value="@DateTime.Now.ToShortDateString()" />
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>
                    <div class="form-group"></div>
                    <div class="form-group">
                        <label for="thumnailUpload" asp-for="ArticleThumbnailFile">Küçük Resim</label>
                        <input asp-for="ArticleThumbnailFile" class="form-control-file" accept="image/*" type="file" id="thumbnailUpload" />
                        <span asp-validation-for="ArticleThumbnailFile" class="text-danger"></span>
                    </div>
                    <div class="form-check">
                        <input asp-for="IsActive" type="checkbox" id="isActive" class="form-check-input"/>
                        <label asp-for="IsActive" for="isActive" class="form-check-label">Aktif Mi?</label>
                        <span asp-validation-for="IsActive" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block mt-4">Kaydet</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-12 mt-2">
            <div class="card">
                <div class="card-header">SEO Optimizasyonu</div>
                <div class="card-body">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="SeoAuthor" for="seoWriter">Yazar Adı</label>
                            <input asp-for="SeoAuthor" type="text" id="seoWriter" class="form-control" />
                            <span asp-validation-for="SeoAuthor" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="SeoTags" for="seoTags">Etiketler</label>
                            <input asp-for="SeoTags" type="text" id="seoTags" class="form-control" />
                            <span asp-validation-for="SeoTags" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-12">
                            <label asp-for="SeoDescription" for="seoDescription">Makale Açıklaması</label>
                            <textarea asp-for="SeoDescription" id="seoDescription" class="form-control"></textarea>
                            <span asp-validation-for="SeoDescription" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

