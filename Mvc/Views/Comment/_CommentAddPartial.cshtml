@model Entities.Dtos.CommentAddDto;

<div class="card my-4">
    <h5 class="card-header">Bir Yorum Yaz:</h5>
    <div class="card-body form-card">
        <form asp-controller="Comment" asp-action="Add" method="post" id="form-comment-add">
            <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
            <div asp-validation-summary="All" class="text-danger" id="validation-summary" aria-hidden="true" style="display: none;"></div>
            <input asp-for="ArticleId" type="hidden"/>
            <div class="form-group mb-3">
                <label asp-for="CreatedByName"></label>
                <input type="text" asp-for="CreatedByName" class="form-control"/>
            </div>
            <div class="form-group">
                <textarea asp-for="CommentContent" class="form-control" rows="3"></textarea>
            </div>
            <button type="button" class="btn btn-primary mt-3" id="btnSave">Gönder</button>
        </form>
    </div>
</div>